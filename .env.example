# Core
NODE_ENV=development
TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=
NODE_ENV=development
SESSION_DRIVER=cookie
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Internationalization (i18n)
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr

# Revisions
CMS_REVISIONS_LIMIT=5

# Media
MEDIA_DERIVATIVES="thumb:200x200_crop,small:400x,medium:800x,large:1600x,hero:1920x1080_crop"
MEDIA_WEBP_QUALITY=82
MEDIA_ADMIN_THUMBNAIL_VARIANT=thumb
MEDIA_ADMIN_MODAL_VARIANT=large

# Storage
# STORAGE_DRIVER: "local" (default) or "r2"
STORAGE_DRIVER=local
# Cloudflare R2 (S3-compatible) â€” required when STORAGE_DRIVER=r2
# You can find ACCOUNT_ID in Cloudflare dashboard (R2)
R2_ACCOUNT_ID=
R2_ENDPOINT=
R2_BUCKET=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
# Optional base URL used to generate public asset URLs (CDN / Custom domain)
# Example: "https://cdn.example.com"
R2_PUBLIC_BASE_URL=

# Protected content (password-protected posts)
# If site settings fields are not configured, these env vars are used.
PROTECTED_ACCESS_USERNAME=
PROTECTED_ACCESS_PASSWORD=

# Scheduler
# Set to "1" to disable the background scheduler in this instance
SCHEDULER_DISABLED=0

# Agents
# JSON array of agents to enable (see docs). Leave as "[]" to disable all.
CMS_AGENTS='[{"id":"seo","name":"SEO Optimizer","url":"https://example.com/webhook","secret":"..."}]'