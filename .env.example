# Core Application
NODE_ENV=development
TZ=UTC
PORT=3333
HOST=localhost
LOG_LEVEL=info
APP_KEY=your-app-key-here-generate-with-node-ace-generate-key
APP_NAME=Adonis EOS
SESSION_DRIVER=cookie

# Database (PostgreSQL)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASSWORD=your_password_here
DB_DATABASE=adonis_eos
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_DEBUG=false

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Internationalization (i18n)
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr

# CMS Configuration
CMS_REVISIONS_LIMIT=5
CMS_REVISIONS_AUTO_PRUNE=true
CMS_PREVIEW_EXPIRATION_HOURS=24
CMS_PREVIEW_SECRET=
CMS_SOFT_DELETE_ENABLED=true
CMS_SOFT_DELETE_RETENTION_DAYS=30

# Media Configuration
MEDIA_UPLOAD_DIR=uploads
MEDIA_MAX_FILE_SIZE=10485760
MEDIA_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,image/avif,application/pdf
MEDIA_DERIVATIVES=thumb:200x200_crop,small:400x,medium:800x,large:1600x,hero:1920x1080_crop
MEDIA_ADMIN_THUMBNAIL_VARIANT=thumb
MEDIA_ADMIN_MODAL_VARIANT=large
MEDIA_WEBP_QUALITY=82
MEDIA_DARK_BRIGHTNESS=0.6
MEDIA_DARK_SATURATION=0.75

# Storage Configuration
STORAGE_DRIVER=local
# Cloudflare R2 (required when STORAGE_DRIVER=r2)
R2_ACCOUNT_ID=
R2_ENDPOINT=
R2_BUCKET=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_PUBLIC_BASE_URL=

# Cache Configuration
CMS_SSR_CACHE_TTL=3600
CMS_PUBLIC_MAX_AGE=60
CMS_CDN_MAX_AGE=3600
CMS_SWR=604800

# Rate Limiting
CMS_RATE_LIMIT_REQUESTS=100
CMS_RATE_LIMIT_WINDOW=60
CMS_RATE_LIMIT_AUTH_REQUESTS=5
CMS_RATE_LIMIT_AUTH_WINDOW=60
CMS_RATE_LIMIT_API_REQUESTS=120
CMS_RATE_LIMIT_API_WINDOW=60

# Webhooks
CMS_WEBHOOKS_ENABLED=false
CMS_WEBHOOK_TIMEOUT=5000
CMS_WEBHOOK_MAX_RETRIES=3
CMS_WEBHOOK_SECRET=

# Scheduler
CMS_SCHEDULER_DEV_INTERVAL=30
CMS_SCHEDULER_PROD_INTERVAL=60
SCHEDULER_DISABLED=0

# Protected Content Access
# Used as fallback when site settings fields are not configured
PROTECTED_ACCESS_USERNAME=
PROTECTED_ACCESS_PASSWORD=

# MCP (Model Context Protocol)
MCP_SYSTEM_USER_ID=
