# ============================================
# AdonisJS Core Configuration
# ============================================
NODE_ENV=development
PORT=3333
APP_KEY=
APP_NAME=Adonis EOS
HOST=0.0.0.0
LOG_LEVEL=info
TZ=UTC

# ============================================
# Session Configuration
# ============================================
SESSION_DRIVER=cookie

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_DATABASE=adonis_eos
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_DEBUG=false

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Internationalization (i18n)
# ============================================
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr

# ============================================
# CMS Configuration
# ============================================
# Revision history limit (default: 50)
CMS_REVISIONS_LIMIT=50
# Auto-prune old revisions (default: true)
CMS_REVISIONS_AUTO_PRUNE=true
# Preview link expiration in hours (default: 24)
CMS_PREVIEW_EXPIRATION_HOURS=24
# Secret key for preview link signing (optional, auto-generated if not set)
CMS_PREVIEW_SECRET=
# Enable soft deletes (default: true)
CMS_SOFT_DELETE_ENABLED=true
# Soft delete retention in days (default: 30)
CMS_SOFT_DELETE_RETENTION_DAYS=30

# ============================================
# Media Management
# ============================================
# Upload directory relative to project root (default: public/uploads)
MEDIA_UPLOAD_DIR=public/uploads
# Max file size in bytes (default: 10485760 = 10MB)
MEDIA_MAX_FILE_SIZE=10485760
# Allowed file types, comma-separated (default: image/jpeg,image/png,image/webp,image/gif)
MEDIA_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif
# Media derivative sizes, comma-separated (default: 400,800,1200,1600)
MEDIA_DERIVATIVES=400,800,1200,1600
# Admin thumbnail variant size (default: 200)
MEDIA_ADMIN_THUMBNAIL_VARIANT=200
# Admin modal preview variant size (default: 1200)
MEDIA_ADMIN_MODAL_VARIANT=1200

# ============================================
# Cache Configuration
# ============================================
# SSR cache TTL in seconds (default: 3600 = 1 hour)
CMS_SSR_CACHE_TTL=3600
# Public cache max-age in seconds (default: 3600)
CMS_PUBLIC_MAX_AGE=3600
# CDN cache max-age in seconds (default: 86400 = 24 hours)
CMS_CDN_MAX_AGE=86400
# Stale-while-revalidate in seconds (default: 86400)
CMS_SWR=86400

# ============================================
# Rate Limiting
# ============================================
# General rate limit: requests per window (default: 100)
CMS_RATE_LIMIT_REQUESTS=100
# General rate limit: window in seconds (default: 60)
CMS_RATE_LIMIT_WINDOW=60
# Auth rate limit: requests per window (default: 10)
CMS_RATE_LIMIT_AUTH_REQUESTS=10
# Auth rate limit: window in seconds (default: 60)
CMS_RATE_LIMIT_AUTH_WINDOW=60
# API rate limit: requests per window (default: 200)
CMS_RATE_LIMIT_API_REQUESTS=200
# API rate limit: window in seconds (default: 60)
CMS_RATE_LIMIT_API_WINDOW=60

# ============================================
# Webhooks
# ============================================
# Enable webhooks (default: true)
CMS_WEBHOOKS_ENABLED=true
# Webhook timeout in milliseconds (default: 5000)
CMS_WEBHOOK_TIMEOUT=5000
# Webhook max retries (default: 3)
CMS_WEBHOOK_MAX_RETRIES=3
# Webhook secret for HMAC signing (optional)
CMS_WEBHOOK_SECRET=

# ============================================
# Scheduler
# ============================================
# Development scheduler interval in seconds (default: 60)
CMS_SCHEDULER_DEV_INTERVAL=60
# Production scheduler interval in seconds (default: 300)
CMS_SCHEDULER_PROD_INTERVAL=300

# ============================================
# MCP (Model Context Protocol) - Optional
# ============================================
# System user ID for MCP operations (set after seeding, see user seeder output)
# MCP_SYSTEM_USER_ID=5
