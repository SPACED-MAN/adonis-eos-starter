{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "typeRoots": ["./types", "./node_modules/@types"],
    /**
     * Use the standard TS lib name ("node"), not the package name ("@types/node").
     * Otherwise TS will look for `node_modules/@types/@types/node`.
     */
    "types": ["node"]
  },
  "exclude": [
    "./inertia/**/*",
    "node_modules",
    "build"
  ]
}